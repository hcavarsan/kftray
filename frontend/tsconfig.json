{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
	"composite": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["frontend/src/**/*", "frontend/vite.config.ts"],
  "exclude": ["frontend/node_modules", "crates", "frontend/dist", "target", "node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
