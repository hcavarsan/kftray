#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:

override_dh_auto_install:
	DEB_HOST_ARCH := $(shell dpkg-architecture -qDEB_HOST_ARCH)
	ifeq ($(DEB_HOST_ARCH),amd64)
		install -Dm755 kftray-{{VERSION}}-amd64.AppImage debian/kftray/usr/bin/kftray
	endif
	ifeq ($(DEB_HOST_ARCH),arm64)
		install -Dm755 kftray-{{VERSION}}-arm64.AppImage debian/kftray/usr/bin/kftray
	endif