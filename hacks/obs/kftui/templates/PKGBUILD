pkgname=kftui
pkgver={{VERSION}}
pkgrel=1
pkgdesc="Kubernetes port-forwarding CLI manager"
arch=('x86_64' 'aarch64')
url="https://github.com/hcavarsan/kftray"
license=('GPL3')
depends=()
source_x86_64=("kftui-${pkgver}-amd64")
source_aarch64=("kftui-${pkgver}-arm64")
sha256sums_x86_64=('{{SHA256_AMD64}}')
sha256sums_aarch64=('{{SHA256_ARM64}}')

build() {
    return 0
}

package() {
    case "$CARCH" in
        x86_64)
            install -Dm755 "kftui-${pkgver}-amd64" "${pkgdir}/usr/bin/kftui"
            ;;
        aarch64)
            install -Dm755 "kftui-${pkgver}-arm64" "${pkgdir}/usr/bin/kftui"
            ;;
    esac
}