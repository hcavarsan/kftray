{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":preserveSemverRanges",
		":semanticCommitTypeAll(chore)",
		"schedule:daily",
		"group:allNonMajor",
		":combinePatchMinorReleases",
		":enableVulnerabilityAlertsWithLabel(security)",
		":ignoreModulesAndTests",
		":label(dependencies)",
		":prNotPending",
		":rebaseStalePrs",
		":semanticCommits",
		":separateMajorReleases",
		":timezone(America/Sao_Paulo)"
	],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": false
	},
	"dependencyDashboard": false,
	"packageRules": [{
		"matchPackagePatterns": [
			"*"
		],
		"matchUpdateTypes": [
			"minor",
			"patch"
		],
		"groupName": "all non-major dependencies",
		"groupSlug": "all-minor-patch"
	},
	{
		"matchPackageNames": ["kube", "k8s-openapi", "kube-runtime", "eslint", "hyper", "tauri", "tauri-plugin-positioner", "tauri-build", "@tauri-apps/cli", "@tauri-apps/api", "ratatui"],
		"enabled": false
	}]
}
